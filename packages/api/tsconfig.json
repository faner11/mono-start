{
  "extends": "@total-typescript/tsconfig/bundler/no-dom/library-monorepo",
  "exclude": ["dist", "node_modules"],
  "include": ["src"],
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
